<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="exampleModalLabel">Volunteer Emails</h2>
        <!--<button type="button" class="close" data-dismiss="modal" aria-label="Close">-->
        <!--  <span aria-hidden="true">&times;</span>-->
        </button>
      </div>
      <div class="modal-body">
        <% email_str = "" %>
        <% event.users.each do |user| %>
            <% email_str += user.email + ', ' %>
        <% end %>
        <% email_str.chomp!(', ') %>
        <textarea id="volunteerEmails" style="width: 100%;"><%= email_str %></textarea> <br>
        <div style="text-align: right;">
            <button type="button" class="btn btn-success clipboard-btn" data-clipboard-action="copy" data-clipboard-target="#volunteerEmails">
                Copy to Clipboard
            </button> <br>
        </div>
        
        <form id='email-form' action='/events/email_volunteers/<%=@event.id%>?id=<%=@event.id%>' method='post' data-remote='true'>
          <label>Subject: </label>
          <input type="text" style="width: 40%; margin: 5px 10px 20px 0px"
                 id="subject" name="subject"
                 value="subject headline" /> <br>
          <textarea id="emailContent" name="content" rows="15" style="width:100%">Your text here</textarea> <br>
        </form>
      </div>
      
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" form='email-form' class="btn btn-success send-email-btn">Send email</button>
      </div>
      
    </div>
  </div>
</div>


