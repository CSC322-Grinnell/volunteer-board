
<!-- This is the form for both creating and editing an event -->
<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="center-form width-med">
  <div class="field">
    <%= f.label "Title" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, rows: 4, cols: 55, class: "width-med" %>
  </div>
  </div>
  
  <br />
  
  <div class="center-form width-lg">
  <div class="field">
    <%= f.label :start_time %>
    <%= f.date_select :start_date, {order: [:month, :day, :year], value: f.object.start_time || Time.now}%>
    <%= f.time_select :start_time, {ignore_date: true, minute_step: 5, ampm: true} %>
  </div>
  
  <br />
  
  <div class="field">
    <%= f.label :end_time %>
    <%= f.date_select :end_date, {order: [:month, :day, :year], value: f.object.end_time || Time.now}%>
    <%= f.time_select :end_time, {ignore_date: true, minute_step: 5, ampm: true} %>
  </div>
  </div>
  
  <br />

  <div class="center-form width-med">
  <div class="field">
    <%= f.label "Number of volunteers needed" %><br />
    <%= f.number_field :num_vols, :placeholder => 1, min: 1 %>
  </div>

  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :contact_phone %> (no dashes or parentheses)
    <%= f.text_field :contact_phone %>
  </div>

  <div class="field">
    <%= f.label :contact_email %><br />
    <%= f.text_field :contact_email %>
  </div>
  
  <br />

  <div class="actions">
    <%= f.submit %>
  </div>
  </div>
<% end %>