
<!-- This is the form for both creating and editing an event -->
<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Title" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, rows:4, cols:55, class: "width-med" %>
  </div>
  
  <br />
  
  <div class="field">
    <%= f.label :start_time %><br />
    <%= f.datetime_select :start_time %>
  </div>
  
  <br />
  
  <div class="field">
    <%= f.label :end_time %><br />
    <%= f.datetime_select :end_time %>
  </div>
  
  <br />

  <div class="field">
    <%= f.label "Number of volunteers needed" %><br />
    <%= f.number_field :num_vols %>
  </div>
  
  
  <div class="field">
    <%= f.label "Number of volunteers signed up" %>
    <%= f.number_field :volunteer_count, :placeholder => 0%>
  </div>

  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :contact_phone %><br />
    <%= f.text_field :contact_phone %>
  </div>

  <div class="field">
    <%= f.label :contact_email %><br />
    <%= f.text_field :contact_email %>
  </div>
  
  <br />

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>