
<!-- This is the form for both creating and editing an event -->
<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="center-form width-med">
  <div class="field">
    <%= f.label "Title" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, rows: 4, cols: 55, class: "width-med" %>
  </div>
  </div>
  
  <br />
  
  <div class="center-form width-lg">
  <div class="field">
    <%= f.label :start_time %>
    <%= f.date_select :start_date, {order: [:month, :day, :year]} %>
    <%= my_start_hour_select :start_hour %>
    <%= my_start_minute_select :start_minute %>
    <%= my_start_ampm_select :start_ampm %>
  </div>
  
  <br />
  
  <div class="field">
    <%= f.label :end_time %>
    <%= f.date_select :end_date, {order: [:month, :day, :year]} %>
    <%= my_end_hour_select :end_hour %>
    <%= my_end_minute_select :end_minute %>
    <%= my_end_ampm_select :end_ampm %>
  </div>
  </div>
  
  <br />

  <div class="center-form width-med">
  <div class="field">
    <%= f.label "Number of volunteers needed" %><br />
    <%= f.number_field :num_vols %>
  </div>
  
  
  <div class="field">
    <%= f.label "Number of volunteers signed up" %>
    <%= f.number_field :volunteer_count, :placeholder => 0%>
  </div>

  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :contact_phone %> (no dashes or parentheses)
    <%= f.text_field :contact_phone %>
  </div>

  <div class="field">
    <%= f.label :contact_email %><br />
    <%= f.text_field :contact_email %>
  </div>
  
  <br />

  <div class="actions">
    <%= f.submit %>
  </div>
  </div>
<% end %>