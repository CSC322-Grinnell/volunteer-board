
<!-- This is the form for both creating and editing an event -->
<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <p style="text-align:center; color:red; font-weight:bold"><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</p>
      <%= devise_error_messages! %>
    </div>
  <% end %>
  
  <div class="center-form width-med">
  <div class="field">
    <%= f.label "Title" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, rows: 4, cols: 55, class: "width-med" %>
  </div>
  </div>
  
  <br />
  
  <div class="center-form width-lg">
  <div class="field">
    <%= f.label :start_time %>
    <%= f.date_select :start_time, {order: [:month, :day, :year], value: event.start_time || Time.now}%>
    <%= f.time_select :start_time, {ignore_date: true, minute_step: 5, ampm: true} %>
  </div>
  
  
  <br />
  
  <div class="field">
    <%= f.label :end_time %>
    <%= f.date_select :end_time, {order: [:month, :day, :year], value: event.end_time || Time.now}%>
    <%= f.time_select :end_time, {ignore_date: true, minute_step: 5, ampm: true} %>
  </div>
  </div>
  
  <br />

  <div class="center-form width-med">
  <div class="field">
    <%= f.label "Number of volunteers needed" %><br />
    <%= f.number_field :num_vols, :placeholder => 1, min: 1 %>
  </div>

  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>
  
  <%= render :partial => 'layouts/skill' %>
  <div class="field">
    <%= f.label :skills %><br />
    <%= f.text_field :skills, :value => "" %>
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#skillModal">Add Skills</button> </br></br>
  </div>
  </br>

  <div class="field">
    <%= f.label :contact_phone %> (no dashes or parentheses)
    <%= f.text_field :contact_phone %>
  </div>

  <div class="field">
    <%= f.label :contact_email %><br />
    <%= f.text_field :contact_email %>
  </div>
  
  <br />

  <div class="actions">
    <%= f.submit %>
  </div>
  </div>
<% end %>