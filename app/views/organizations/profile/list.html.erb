<!DOCTYPE html>
<html lang="en">
<p id="notice"><%= notice %></p>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
<div class=margin-sides>
<table>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>

  <tbody>
    <% (@organizations.order(:name)).each do |organization| %>
      <tr>
        <td><a href=<%="organizations/#{organization.id}"%>><%= organization.name %></a></td>
        <td><%= organization.address %></td>
        <td>
            <%= organization.city %>,
            <%= organization.state %>
        </td>
        <td>(<%= organization.phone[0,3] %>) <%= organization.phone[3,3] %>-<%= organization.phone[6,4] %></td>
        <td><%= organization.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</html>
